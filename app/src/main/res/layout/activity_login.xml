<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.LoginActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/lightblue">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp"

        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Login"
                android:textColor="@color/lightblue"
                android:textSize="22sp"
                android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/lightblue"
                android:hint="Email Adress or Mobile Number"
                android:inputType="textEmailAddress"
                android:padding="20dp"
                android:textColorHint="@color/lightblue"
                android:backgroundTint="@color/lightblue"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/lightblue"
                >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_login_pswrd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="20dp"
                android:backgroundTint="@color/lightblue"
                android:textColorHint="@color/lightblue"
                />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/fogetpasword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="I forgot password?"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/loginbtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_shape"
                android:backgroundTint="@color/lightblue"
                android:text="Login"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/skip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Skip"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/goregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Don't have a acoount? Register"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="16sp" />



</LinearLayout>